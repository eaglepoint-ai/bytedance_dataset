# Shared
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=meeting_scheduler
POSTGRES_PORT=5432

# Auth service
AUTH_PORT=3001
AUTH_JWT_SECRET=dev-secret-change-me
AUTH_COOKIE_NAME=ms_session
AUTH_DEV_MODE=1
AUTH_CORS_ORIGIN=http://localhost:5173

# API service
API_PORT=8000
API_CORS_ORIGIN=http://localhost:5173
DATABASE_URL=postgresql+psycopg2://postgres:postgres@postgres:5432/meeting_scheduler
AUTH_BASE_URL=http://auth:3001

# Optional Google Calendar integration (leave empty for local dev)
GOOGLE_SERVICE_ACCOUNT_JSON=
GOOGLE_SERVICE_ACCOUNT_FILE=
GOOGLE_CALENDAR_ID=primary

# Optional: enable API test reset endpoint for e2e stability
API_ENABLE_TEST_RESET=1
